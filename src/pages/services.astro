---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/software.webp";
import personWorking from "@images/software2.webp";
import beforeAfter from "@images/beforeandafter.webp";
import constructionWorkers from "@images/feature1.webp";
import aerialView from "@images/feature2.webp";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Delivering Premium Software Solutions",
    subTitle:
      "We specialize in creating high-quality, tailored software designed to meet the unique needs of each client. With a focus on innovation, reliability, and performance, our solutions are crafted to drive success and efficiency across various industries. Whether it's developing custom applications, optimizing existing systems, or providing ongoing technical support, we are committed to delivering excellence in every project.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Web design ",
    imgTwo: personWorking,
    imgTwoAlt: "Website Design",
  },
  {
    isRightSection: false,
    title: "Revamping Existing Software ",
    subTitle:
      "Revamping Existing Software involves breathing new life into your current systems by enhancing performance and improving overall functionality. We specialize in modernizing legacy software, optimizing code, and ensuring that your technology stays up-to-date with the latest industry standards. By revitalizing your existing software, we help you maximize its potential, reduce operational inefficiencies, and extend its lifespan, all while minimizing disruption to your business operations.",
    img: beforeAfter,
    imgAlt: "Website before and after",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Adding New Features to Existing Software",
    subTitle:
      "Adding New Features to Existing Software allows you to expand the capabilities of your current systems, keeping them aligned with evolving business needs and user expectations. Our expert team works closely with you to identify opportunities for enhancement, designing and implementing new features that seamlessly integrate with your existing infrastructure. Whether it's improving user experience, adding functionality, or enabling new integrations, we ensure that the new features are robust, scalable, and perfectly suited to enhance the value and performance of your software.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "new features",
    imgTwo: aerialView,
    imgTwoAlt: "types of new features",
  },
 
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://lightwebx.com/services",
    "url": "https://lightwebx.com/services",
    "name": " Services | Light WebX",
    "description": "Uniting expertise with your vision, Light WebX provides exceptional service and comprehensive solutions in the software industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://lightwebx.com",
        "name": "Light WebX",
        "description": "Light WebX offers top-tier software services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At LightWebx, we take immense pride in offering a wide range of comprehensive solutions that cater to the diverse needs of our clients in the software industry. Our commitment to excellence extends beyond just delivering innovative products; we are dedicated to providing exceptional service at every stage of the process. Whether it's through cutting-edge technology, personalized support, or ongoing collaboration, we strive to exceed expectations and ensure that our clients achieve their goals with confidence."
    btnExists={false}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!-- FeaturesStats section showcases essential stats valuable to users
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  /> -->
</MainLayout>
